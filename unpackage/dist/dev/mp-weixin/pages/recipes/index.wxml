<view class="page"><view class="header"><text class="title">菜谱大全</text><text data-event-opts="{{[['tap',[['onSearchDialog',['$event']]]]]}}" class="icon-search" bindtap="__e">🔍</text></view><block wx:if="{{showSearch}}"><view class="search-container"><input class="search-input" type="text" placeholder="搜索菜谱或食材..." data-event-opts="{{[['confirm',[['doSearch',['$event']]]],['input',[['__set_model',['','searchKeyword','$event',[]]]]]]}}" value="{{searchKeyword}}" bindconfirm="__e" bindinput="__e"/><text data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="cancel-btn" bindtap="__e">取消</text></view></block><scroll-view class="chips" scroll-x="{{true}}"><block wx:for="{{cats}}" wx:for-item="c" wx:for-index="__i0__" wx:key="key"><view data-event-opts="{{[['tap',[['e1',['$event']]]]]}}" data-event-params="{{({c})}}" class="{{['chip',activeCat===c.key?'active':'']}}" bindtap="__e">{{''+c.name+''}}</view></block></scroll-view><view class="grid"><block wx:for="{{filteredList}}" wx:for-item="r" wx:for-index="__i1__" wx:key="id"><view data-event-opts="{{[['tap',[['openRecipe',['$0'],[[['filteredList','id',r.id]]]]]]]}}" class="card" bindtap="__e"><image class="cover" src="{{r.cover}}" mode="aspectFill"></image><view class="info"><text class="name">{{r.name}}</text><view class="meta"><view class="{{['tag',r.level==='简单'?'tag-green':'tag-orange']}}">{{r.level}}</view><text class="time">{{r.time+"min"}}</text></view></view></view></block></view><block wx:if="{{filteredList.length===0}}"><view class="empty"><text>没有找到相关菜谱哦~</text></view></block><view style="height:24rpx;"></view></view>