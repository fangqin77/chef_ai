<view class="daily-page"><view class="header"><text class="title">每日菜谱</text><view class="actions"><block wx:if="{{$root.g0}}"><button data-event-opts="{{[['tap',[['clearAll',['$event']]]]]}}" class="btn ghost small" bindtap="__e">清空</button></block></view></view><block wx:if="{{!$root.g1}}"><view class="empty"><text class="empty-text">还没有收藏的菜谱，去逛逛吧～</text><button data-event-opts="{{[['tap',[['goExplore',['$event']]]]]}}" class="btn primary small" bindtap="__e">去菜谱大全</button></view></block><scroll-view class="list" scroll-y="{{true}}"><block wx:for="{{groups}}" wx:for-item="g" wx:for-index="__i0__" wx:key="date"><view class="date-section"><view class="date-header">{{g.date}}</view><block wx:for="{{g.items}}" wx:for-item="it" wx:for-index="idx" wx:key="id"><view class="cart-row"><view data-event-opts="{{[['touchstart',[['onTouchStart',['$event','$0'],[[['groups','date',g.date],['items','id',it.id,'_gIndex']]]]]],['touchmove',[['onTouchMove',['$event','$0'],[[['groups','date',g.date],['items','id',it.id,'_gIndex']]]]]],['touchend',[['onTouchEnd',['$event','$0'],[[['groups','date',g.date],['items','id',it.id,'_gIndex']]]]]],['tap',[['handleTap',['$0'],[[['groups','date',g.date],['items','id',it.id]]]]]]]}}" class="row-content" style="{{'transform:'+('translateX('+(it._dx||0)+'px)')+';'}}" catchtouchstart="__e" bindtouchmove="__e" bindtouchend="__e" bindtap="__e"><image class="cover" src="{{it.imageUrl||fallbackImg}}" mode="aspectFill"></image><view class="info"><view class="name">{{it.name||'菜谱 '+it.id}}</view></view></view><block wx:if="{{it._open}}"><view class="ops"><button data-event-opts="{{[['tap',[['remove',['$0'],[[['groups','date',g.date],['items','id',it.id]]]]]]]}}" class="btn ghost tiny" catchtap="__e">删除</button></view></block></view></block></view></block></scroll-view></view>