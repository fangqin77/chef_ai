<view class="page"><view class="header"><text class="title">随机菜谱</text><view class="mini-cards"><block wx:for="{{randomRecipes}}" wx:for-item="recipe" wx:for-index="index" wx:key="id"><view class="mini-card"><image class="mini-cover" src="{{recipe.cover||'/static/recipe-detail-2.jpg'}}" mode="aspectFill"></image></view></block></view></view><block wx:if="{{selectedRecipe}}"><view class="detail-view"><view class="detail-top"><image class="detail-cover" src="{{selectedRecipe.cover}}" mode="aspectFill"></image><text class="detail-name">{{selectedRecipe.name}}</text></view><view class="detail-bottom"><view class="detail-section"><text class="section-title">调料</text><view class="section-content-container"><text class="section-content" style="font-weight:bold;font-size:32rpx;">{{selectedRecipe.condiments||'暂无调料信息'}}</text></view></view><view class="detail-section"><text class="section-title">做法</text><view class="section-content-container"><view class="steps-container"><block wx:for="{{$root.l0}}" wx:for-item="step" wx:for-index="index" wx:key="index"><view class="step"><text class="step-text" style="font-weight:normal !important;">{{index+1+". "+step.g0+(step.g1?'':'。')}}</text></view></block></view></view></view><view class="detail-section"><text class="section-title">基本信息</text><view class="basic-info"><text>{{"ID: "+selectedRecipe.id}}</text><text>{{"分类ID: "+(selectedRecipe.categoryId||'无')}}</text><text>{{"难度: "+(selectedRecipe.level||'适中')}}</text></view></view></view></view></block><view class="nav-buttons"><button data-event-opts="{{[['tap',[['prevRecipe',['$event']]]]]}}" class="nav-button prev" bindtap="__e">上一个</button><button data-event-opts="{{[['tap',[['nextRecipe',['$event']]]]]}}" class="nav-button next" bindtap="__e">下一个</button></view></view>