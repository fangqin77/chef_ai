
.chat-page {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  height: 100vh;
  background: #f7f7f9;
}

/* 会话区 */
.messages {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 24rpx 24rpx 12rpx 24rpx;
  box-sizing: border-box;
}
.msg {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 20rpx;
}
.msg.assistant .avatar {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
  border-radius: 12rpx;
}
.bubble {
  max-width: 560rpx;
  padding: 18rpx 22rpx;
  border-radius: 18rpx 18rpx 18rpx 6rpx;
  background: #ffffff;
  color: #1f2937;
  font-size: 28rpx;
  line-height: 1.6;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.05);
}

/* 输入区 */
.input-bar {
  padding: 16rpx 20rpx 28rpx 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  gap: 16rpx;
  background: #f7f7f9;
  box-sizing: border-box;
}
.input-placeholder {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  background: #eceff3;
  color: #9aa3af;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0 24rpx;
  font-size: 26rpx;
}
.send-btn {
  height: 88rpx;
  padding: 0 28rpx;
  border-radius: 44rpx;
  background: #ff6a00;
  color: #fff;
  font-size: 28rpx;
  opacity: 0.6;
}

