<view class="page"><block wx:if="{{recipe}}"><view class="recipe-detail"><image class="cover" src="{{recipe.coverImg}}" mode="widthFix"></image><view class="header"><text class="title">{{recipe.name}}</text><view class="meta"><text class="tag">{{recipe.difficulty||'简单'}}</text><text class="time">{{"⏱ "+(recipe.cookTime||'20')+"分钟"}}</text></view></view><view class="section"><view class="section-title">原料</view><view class="ingredients"><block wx:for="{{parseIngredients}}" wx:for-item="item" wx:for-index="index" wx:key="index"><text class="ingredient">{{item}}</text></block></view></view><view class="section"><view class="section-title">做法</view><view class="steps"><block wx:for="{{parseSteps}}" wx:for-item="step" wx:for-index="index" wx:key="index"><text class="step">{{index+1+". "+step}}</text></block></view></view></view></block><block wx:else><view class="loading"><text>加载中...</text></view></block></view>