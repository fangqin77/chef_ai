<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.chef_ai_backend.mapper.RecipeMapper">
  <!-- 菜谱结果集映射 -->
  <resultMap id="RecipeMap" type="com.example.chef_ai_backend.model.Recipe">
    <id property="id" column="id"/>
    <result property="typeId" column="type_id"/>
    <result property="name" column="name"/>
    <result property="method" column="method"/>
    <result property="condiments" column="condiments"/>
    <result property="ingredients" column="ingredients"/>
    <result property="feature" column="feature"/>
  </resultMap>

  <!-- 分类结果集映射 -->
  <resultMap id="RecipeTypeMap" type="com.example.chef_ai_backend.model.RecipeType">
    <id property="nodeId" column="节点ID"/>
    <result property="ftype" column="ftype"/>
    <result property="typeName" column="类型名称"/>
    <result property="parentNode" column="父节点"/>
    <result property="sortOrder" column="顺序"/>
  </resultMap>
  
  <!-- 新的分类结果集映射 -->
  <resultMap id="RecipeCategoryMap" type="com.example.chef_ai_backend.model.RecipeCategory">
    <id property="categoryId" column="category_id"/>
    <result property="categoryName" column="category_name"/>
    <result property="categoryType" column="category_type"/>
    <result property="categoryDesc" column="category_desc"/>
    <result property="createTime" column="create_time"/>
    <result property="updateTime" column="update_time"/>
  </resultMap>

  <!-- 热门菜谱查询 -->
  <select id="selectHotRecipes" resultMap="RecipeMap">
    SELECT * FROM recipes
    <if test="limit != null">
      ORDER BY id DESC LIMIT #{limit}
    </if>
    <if test="limit == null">
      ORDER BY id DESC
    </if>
  </select>

  <!-- 获取非根节点分类（排除parentNode为0或null的节点） -->
  <select id="selectNonRootCategories" resultMap="RecipeTypeMap">
    SELECT * FROM recipe_types
    WHERE 父节点 IS NOT NULL AND 父节点 != 0
    ORDER BY 顺序 ASC
  </select>

  <!-- 根据分类ID查询菜谱 -->
  <select id="selectByCategoryId" resultMap="RecipeMap">
    SELECT * FROM recipes
    WHERE type_id = #{categoryId}
    <if test="limit != null">
      ORDER BY id DESC LIMIT #{limit}
    </if>
    <if test="limit == null">
      ORDER BY id DESC
    </if>
  </select>

  <!-- 根据新分类ID查询菜谱 -->
  <select id="selectByNewCategoryId" resultMap="RecipeMap">
    SELECT r.* 
    FROM recipes r
    JOIN recipe_category_relation rcr ON r.id = rcr.recipe_id
    WHERE rcr.category_id = #{categoryId}
    <if test="limit != null">
      ORDER BY r.id DESC LIMIT #{limit}
    </if>
    <if test="limit == null">
      ORDER BY r.id DESC
    </if>
  </select>

  <!-- 搜索菜谱（模糊匹配） -->
  <select id="searchRecipes" resultMap="RecipeMap">
    SELECT * FROM recipes
    WHERE name LIKE CONCAT('%', #{keyword}, '%')
       OR method LIKE CONCAT('%', #{keyword}, '%')
    ORDER BY id DESC
  </select>
  
  <!-- 根据ID获取菜谱详情 -->
  <select id="selectById" resultMap="RecipeMap">
    SELECT * FROM recipes WHERE id = #{id}
  </select>
  
  <!-- 获取所有分类 -->
  <select id="selectAllCategories" resultMap="RecipeCategoryMap">
    SELECT * FROM recipe_categories
    ORDER BY category_id ASC
  </select>
  
  <!-- 获取所有菜谱 -->
  <select id="selectAllRecipes" resultMap="RecipeMap">
    SELECT * FROM recipes
    ORDER BY id DESC
  </select>
  
  <!-- 管理端：分页查询/计数 -->
  <select id="adminListRecipes" resultMap="RecipeMap">
    SELECT * FROM recipes
    WHERE 1=1
    <if test="keyword != null and keyword != ''">
      AND (name LIKE CONCAT('%', #{keyword}, '%') OR feature LIKE CONCAT('%', #{keyword}, '%'))
    </if>
    ORDER BY id DESC
    LIMIT #{limit} OFFSET #{offset}
  </select>
  <select id="adminCountRecipes" resultType="int">
    SELECT COUNT(1) FROM recipes
    WHERE 1=1
    <if test="keyword != null and keyword != ''">
      AND (name LIKE CONCAT('%', #{keyword}, '%') OR feature LIKE CONCAT('%', #{keyword}, '%'))
    </if>
  </select>

  <!-- 基本 CRUD -->
  <insert id="insertRecipe" parameterType="com.example.chef_ai_backend.model.Recipe" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO recipes (type_id, name, method, condiments, ingredients, feature)
    VALUES (#{typeId}, #{name}, #{method}, #{condiments}, #{ingredients}, #{feature})
  </insert>
  <update id="updateRecipe" parameterType="com.example.chef_ai_backend.model.Recipe">
    UPDATE recipes
    <set>
      <if test="typeId != null">type_id = #{typeId},</if>
      <if test="name != null and name != ''">name = #{name},</if>
      <if test="method != null">method = #{method},</if>
      <if test="condiments != null">condiments = #{condiments},</if>
      <if test="ingredients != null">ingredients = #{ingredients},</if>
      <if test="feature != null">feature = #{feature},</if>
    </set>
    WHERE id = #{id}
  </update>
  <delete id="deleteRecipe">
    DELETE FROM recipes WHERE id = #{id}
  </delete>

  <!-- 随机获取菜谱 -->
  <select id="selectRandomRecipes" resultMap="RecipeMap">
    SELECT * FROM recipes
    ORDER BY RAND()
    LIMIT #{limit}
  </select>
</mapper>