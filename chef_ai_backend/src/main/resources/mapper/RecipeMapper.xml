<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.chef_ai_backend.mapper.RecipeMapper">
  <resultMap id="RecipeMap" type="com.example.chef_ai_backend.model.Recipe">
    <id property="recipeId" column="recipe_id"/>
    <result property="userId" column="user_id"/>
    <result property="name" column="name"/>
    <result property="coverImg" column="cover_img"/>
    <result property="cuisineType" column="cuisine_type"/>
    <result property="difficulty" column="difficulty"/>
    <result property="cookTime" column="cook_time"/>
    <result property="ingredients" column="ingredients"/>
    <result property="steps" column="steps"/>
    <result property="viewCount" column="view_count"/>
    <result property="likeCount" column="like_count"/>
    <result property="createTime" column="create_time"/>
    <result property="updateTime" column="update_time"/>
  </resultMap>

  <!-- 热门菜谱：按 like_count desc、view_count desc，取前 N 条 -->
  <select id="selectHotRecipes" resultMap="RecipeMap">
    SELECT *
    FROM recipe
    ORDER BY like_count DESC, view_count DESC, create_time DESC
    LIMIT #{limit}
  </select>
</mapper>